<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/igSliderImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400mdp"
        android:src="@drawable/trackexpanse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txSliderHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20mdp"
        android:fontFamily="@font/opensanssemibold"
        android:text="Track Expanses"
        android:textColor="@color/black"
        android:textSize="@dimen/_24font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/igSliderImage" />

    <TextView
        android:id="@+id/txSliderDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onBoarding1"
        android:textSize="@dimen/_11font_mdp"
        android:gravity="center"
        android:padding="@dimen/_6mdp"
        android:fontFamily="@font/opensansregular"
        android:textColor="@color/lightBlack"
        android:layout_marginHorizontal="@dimen/_24mdp"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txSliderHeading" />


</androidx.constraintlayout.widget.ConstraintLayout>